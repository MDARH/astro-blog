---
// Advertisement Banner Component
interface Props {
	ad: {
		id: string;
		title: string;
		description: string;
		image: string;
		link: string;
		type: 'banner' | 'horizontal' | 'square';
		position: string;
	};
	class?: string;
}

const { ad, class: className = '' } = Astro.props;
---

<div class={`ad-banner ad-${ad.type} ${className}`} data-ad-id={ad.id}>
	<a href={ad.link} class="ad-link" target="_blank" rel="noopener sponsored">
		<div class="ad-image">
			<img src={ad.image} alt={ad.title} loading="lazy" />
		</div>
		<div class="ad-content">
			<h4 class="ad-title">{ad.title}</h4>
			<p class="ad-description">{ad.description}</p>
			<span class="ad-cta">Learn More â†’</span>
		</div>
	</a>
	<span class="ad-label">Advertisement</span>
</div>

<style>
	.ad-banner {
		position: relative;
		background: var(--card-bg);
		border: 1px solid var(--border-color);
		border-radius: 8px;
		overflow: hidden;
		transition: all 0.3s ease;
		margin: 1rem 0;
	}

	.ad-banner:hover {
		transform: translateY(-2px);
		box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
		border-color: var(--accent);
	}

	.ad-link {
		display: block;
		text-decoration: none;
		color: inherit;
	}

	.ad-label {
		position: absolute;
		top: 8px;
		right: 8px;
		background: var(--accent);
		color: white;
		font-size: 0.7rem;
		padding: 2px 6px;
		border-radius: 4px;
		font-weight: 500;
		opacity: 0.8;
	}

	/* Banner type (default) */
	.ad-banner {
		display: flex;
		flex-direction: column;
		max-width: 300px;
	}

	.ad-image {
		width: 100%;
		height: 150px;
		overflow: hidden;
	}

	.ad-image img {
		width: 100%;
		height: 100%;
		object-fit: cover;
		transition: transform 0.3s ease;
	}

	.ad-link:hover .ad-image img {
		transform: scale(1.05);
	}

	.ad-content {
		padding: 1rem;
	}

	.ad-title {
		font-size: 1rem;
		font-weight: 600;
		margin: 0 0 0.5rem 0;
		color: var(--text-color);
		line-height: 1.3;
	}

	.ad-description {
		font-size: 0.85rem;
		color: var(--text-muted);
		margin: 0 0 0.75rem 0;
		line-height: 1.4;
	}

	.ad-cta {
		font-size: 0.8rem;
		color: var(--accent);
		font-weight: 600;
	}

	/* Horizontal type */
	.ad-horizontal {
		flex-direction: row;
		max-width: 100%;
		height: 120px;
	}

	.ad-horizontal .ad-image {
		width: 200px;
		height: 100%;
		flex-shrink: 0;
	}

	.ad-horizontal .ad-content {
		flex: 1;
		display: flex;
		flex-direction: column;
		justify-content: center;
		padding: 0.75rem;
	}

	/* Square type */
	.ad-square {
		max-width: 250px;
		height: 250px;
	}

	.ad-square .ad-image {
		height: 60%;
	}

	.ad-square .ad-content {
		height: 40%;
		padding: 0.75rem;
	}

	.ad-square .ad-title {
		font-size: 0.9rem;
	}

	.ad-square .ad-description {
		font-size: 0.75rem;
		margin-bottom: 0.5rem;
	}

	/* Responsive design */
	@media (max-width: 768px) {
		.ad-horizontal {
			flex-direction: column;
			height: auto;
			max-width: 300px;
		}

		.ad-horizontal .ad-image {
			width: 100%;
			height: 150px;
		}

		.ad-square {
			max-width: 100%;
			height: auto;
		}

		.ad-square .ad-image {
			height: 150px;
		}

		.ad-square .ad-content {
			height: auto;
		}
	}

	/* Animation for attention */
	@keyframes pulse {
		0% { box-shadow: 0 0 0 0 rgba(var(--accent-rgb), 0.4); }
		70% { box-shadow: 0 0 0 10px rgba(var(--accent-rgb), 0); }
		100% { box-shadow: 0 0 0 0 rgba(var(--accent-rgb), 0); }
	}

	.ad-banner:hover {
		animation: pulse 1.5s infinite;
	}
</style>

<script>
	// Track ad impressions and clicks
	document.addEventListener('DOMContentLoaded', function() {
		const adBanners = document.querySelectorAll('.ad-banner');
		
		adBanners.forEach(banner => {
			const adId = banner.dataset.adId;
			
			// Track impression when ad comes into view
			const observer = new IntersectionObserver((entries) => {
				entries.forEach(entry => {
					if (entry.isIntersecting) {
						console.log(`Ad impression: ${adId}`);
						// Here you would send to analytics
						observer.unobserve(entry.target);
					}
				});
			}, { threshold: 0.5 });
			
			observer.observe(banner);
			
			// Track clicks
			banner.addEventListener('click', () => {
				console.log(`Ad click: ${adId}`);
				// Here you would send to analytics
			});
		});
	});
</script>