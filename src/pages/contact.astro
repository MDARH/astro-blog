---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import GoToTop from '../components/GoToTop.astro';
import HeaderScript from '../components/HeaderScript.astro';
import { SITE_TITLE } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead 
			title="Contact Us - SomaDhanTech" 
			description="Get in touch with SomaDhanTech. Connect with us through social media and stay updated with the latest in web development and technology."
			keywords={['contact', 'social media', 'web development', 'technology', 'Bangladesh']}
		/>
